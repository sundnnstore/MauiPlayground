<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MauiPlayground.Pages.AnimationView.Views.Title"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid ColumnSpacing="0" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <BoxView
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Color="{StaticResource HeaderBackground}" />
        <Label
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="20"
            FontAttributes="Bold"
            FontSize="35"
            Text="Mugello Circuit"
            TextColor="{StaticResource HeaderText}" />
        <BoxView
            Grid.Row="1"
            Grid.Column="1"
            Color="{StaticResource SubHeaderBackground}" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Margin="20,0"
            HorizontalOptions="End"
            Text="JUNE 3, 2018"
            TextColor="{StaticResource SubHeaderText}"
            VerticalOptions="Center" />
    </Grid>
</ContentView>
