<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiPlayground.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="30,0" Spacing="25">
        <ScrollView Orientation="Horizontal">
            <HorizontalStackLayout>
                <Button
                    Clicked="PlayAudio_Clicked"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="PlayAudioClicked"
                    Text="PlayAudio" />
                <Button
                    Clicked="DrawableView_Clicked"
                    HorizontalOptions="Center"
                    Text="DrawableView" />
                <Button
                    Clicked="ListView_Clicked"
                    HorizontalOptions="Center"
                    Text="ListView" />
            </HorizontalStackLayout>
        </ScrollView>

        <VerticalStackLayout
            x:Name="stackLayout"
            HeightRequest="500"
            VerticalOptions="Center">
            <Label Text="Show Example" />
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
