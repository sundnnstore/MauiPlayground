<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiPlayground.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <ScrollView>
                <HorizontalStackLayout>
                    <Button
                        Clicked="PlayAudio_Clicked"
                        HorizontalOptions="Center"
                        SemanticProperties.Hint="PlayAudioClicked"
                        Text="PlayAudio" />
                    <Button
                        Clicked="DrawableView_Clicked"
                        HorizontalOptions="Center"
                        Text="DrawableView" />
                </HorizontalStackLayout>
            </ScrollView>
            <Frame BorderColor="Gray" CornerRadius="5">
                <VerticalStackLayout x:Name="stackLayout" VerticalOptions="Center">
                    <Label Text="Show Example" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
